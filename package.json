{
  "name": "benion-prisma-api",
  "version": "1.0.0",
  "description": "This is just a mini project to test features with Prisma",
  "main": "server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "schema:switch": "node scripts/switch-schema.js",
    "db:generate": "npm run schema:switch && prisma generate",
    "db:push": "npm run schema:switch && prisma db push",
    "db:migrate": "npm run schema:switch && prisma migrate dev",
    "db:migrate:deploy": "npm run schema:switch && prisma migrate deploy",
    "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:studio": "npm run schema:switch && prisma studio"
  },
  "author": "Bernard Iorver",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.2",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
